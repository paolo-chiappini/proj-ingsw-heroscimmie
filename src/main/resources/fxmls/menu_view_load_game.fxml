<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" stylesheets="@menu_style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.client.view.gui.controllers.MenuLoadGameController">
   <Label prefWidth="350.0" styleClass="player-name-label" text="Enter your Nickname" />
   <TextField fx:id="nameTextField" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="350.0" promptText="Nickname" styleClass="player-name-textfield">
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <VBox.margin>
         <Insets />
      </VBox.margin>
   </TextField>
   <Label fx:id="nameAlreadyTakenLabel" prefWidth="350.0" text="A user has already taken this name" textFill="RED">
      <VBox.margin>
         <Insets bottom="20.0" />
      </VBox.margin>
      <font>
         <Font name="System Bold" size="15.0" />
      </font>
   </Label>
   <Label prefWidth="350.0" styleClass="player-name-label" text="Select a game" />
   <ListView fx:id="gamesList" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="188.0" prefWidth="350.0" styleClass="games-list">
      <VBox.margin>
         <Insets />
      </VBox.margin>
   </ListView>
   <Label fx:id="notWhitelistedLabel" prefWidth="350.0" text="You are not whitelisted in the selected game" textFill="RED">
      <font>
         <Font name="System Bold" size="15.0" />
      </font>
      <VBox.margin>
         <Insets bottom="50.0" />
      </VBox.margin>
   </Label>
   <Button fx:id="confirmButton" mnemonicParsing="false" prefHeight="76.0" prefWidth="257.0" text="Confirm and Join" />
</VBox>
